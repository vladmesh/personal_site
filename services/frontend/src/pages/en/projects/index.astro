---
import BaseLayout from '@layouts/BaseLayout.astro';
import ProjectCard from '@components/ProjectCard.astro';
import { uiCopy } from '@data/ui';
import { projects } from '@data/projects';
import { fetchContacts } from '@lib/profile/contacts';
const entries = projects.en;
const contacts = await fetchContacts('en');
---
<BaseLayout
  title={uiCopy.en.projectsPage.metaTitle}
  description={uiCopy.en.projectsPage.metaDescription}
  lang="en"
  ogImage="/og/projects.png"
  contacts={contacts}
>
  <section class="space-y-8">
    <header class="space-y-3">
      <p class="text-sm uppercase tracking-[0.3em] text-brand-light/80">{uiCopy.en.projectsPage.eyebrow}</p>
      <h1 class="text-4xl font-semibold text-white">{uiCopy.en.projectsPage.title}</h1>
      <p class="max-w-2xl text-slate-300">{uiCopy.en.projectsPage.intro}</p>
    </header>
    <div class="grid gap-6 md:grid-cols-2">
      {entries.map((project) => (
        <ProjectCard project={project} lang="en" />
      ))}
    </div>
  </section>
</BaseLayout>
