#!/bin/bash
# Pre-push hook to run lints and tests in Docker before pushing

set -e

echo "üîç Running pre-push checks..."
echo ""

# Get the current directory (project root)
PROJECT_ROOT="$(git rev-parse --show-toplevel)"
cd "$PROJECT_ROOT"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Function to run a check
run_check() {
    local name="$1"
    local command="$2"
    
    echo -e "${YELLOW}Running $name...${NC}"
    if eval "$command"; then
        echo -e "${GREEN}‚úì $name passed${NC}"
        echo ""
        return 0
    else
        echo -e "${RED}‚úó $name failed${NC}"
        echo ""
        return 1
    fi
}

# Track if any check failed
IS_FAILED=0
echo "Debug: Initial IS_FAILED=$IS_FAILED"

# Run linter
echo "Debug: Before linter IS_FAILED=$IS_FAILED"
run_check "Ruff linter" "(cd infra && docker compose -f docker-compose.test.yml run --rm backend-test ruff check .)"
RET=$?
echo "Debug: Ruff linter returned $RET"
if [ $RET -ne 0 ]; then
    echo "Debug: Ruff linter failed block entered"
    IS_FAILED=1
fi
echo "Debug: After linter IS_FAILED=$IS_FAILED"

# Run type checker
echo "Debug: Before mypy IS_FAILED=$IS_FAILED"
run_check "MyPy type checker" "(cd infra && docker compose -f docker-compose.test.yml run --rm backend-test mypy src/)"
RET=$?
echo "Debug: MyPy type checker returned $RET"
if [ $RET -ne 0 ]; then
    echo "Debug: MyPy type checker failed block entered"
    IS_FAILED=1
fi
echo "Debug: After mypy IS_FAILED=$IS_FAILED"

# Run unit tests
echo "Debug: Before unit tests IS_FAILED=$IS_FAILED"
run_check "Unit tests" "(cd infra && docker compose -f docker-compose.test.yml run --rm backend-test pytest -m unit -v)"
RET=$?
echo "Debug: Unit tests returned $RET"
if [ $RET -ne 0 ]; then
    echo "Debug: Unit tests failed block entered"
    IS_FAILED=1
fi
echo "Debug: After unit tests IS_FAILED=$IS_FAILED"

# Run integration tests
echo "Debug: Before integration tests IS_FAILED=$IS_FAILED"
run_check "Integration tests" "(cd infra && docker compose -f docker-compose.test.yml run --rm backend-test pytest -m integration -v)"
RET=$?
echo "Debug: Integration tests returned $RET"
if [ $RET -ne 0 ]; then
    echo "Debug: Integration tests failed block entered"
    IS_FAILED=1
fi
echo "Debug: After integration tests IS_FAILED=$IS_FAILED"

# Clean up
echo -e "${YELLOW}Cleaning up test containers...${NC}"
(cd infra && docker compose -f docker-compose.test.yml down -v > /dev/null 2>&1) || true

echo "Debug: IS_FAILED=$IS_FAILED"

# Final result
if [ "$IS_FAILED" -eq 1 ]; then
    echo -e "${RED}‚ùå Pre-push checks failed. Push aborted.${NC}"
    echo -e "${YELLOW}Fix the issues above and try again.${NC}"
    exit 1
else
    echo -e "${GREEN}‚úÖ All pre-push checks passed!${NC}"
    exit 0
fi
