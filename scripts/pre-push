#!/bin/bash
# Pre-push hook to run lints and tests in Docker before pushing

set -e

echo "üîç Running pre-push checks..."
echo ""

# Get the current directory (project root)
PROJECT_ROOT="$(git rev-parse --show-toplevel)"
cd "$PROJECT_ROOT"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Function to run a check
run_check() {
    local name="$1"
    local command="$2"
    
    echo -e "${YELLOW}Running $name...${NC}"
    if eval "$command"; then
        echo -e "${GREEN}‚úì $name passed${NC}"
        echo ""
        return 0
    else
        echo -e "${RED}‚úó $name failed${NC}"
        echo ""
        return 1
    fi
}

# Track if any check failed
FAILED=0

# Run linter
if ! run_check "Ruff linter" "cd infra && docker compose -f docker-compose.test.yml run --rm backend-test ruff check ."; then
    FAILED=1
fi

# Run type checker
if ! run_check "MyPy type checker" "cd infra && docker compose -f docker-compose.test.yml run --rm backend-test mypy src/"; then
    FAILED=1
fi

# Run unit tests
if ! run_check "Unit tests" "cd infra && docker compose -f docker-compose.test.yml run --rm backend-test pytest -m unit -v"; then
    FAILED=1
fi

# Run integration tests
if ! run_check "Integration tests" "cd infra && docker compose -f docker-compose.test.yml run --rm backend-test pytest -m integration -v"; then
    FAILED=1
fi

# Clean up
echo -e "${YELLOW}Cleaning up test containers...${NC}"
cd infra && docker compose -f docker-compose.test.yml down -v > /dev/null 2>&1

# Final result
if [ $FAILED -eq 1 ]; then
    echo -e "${RED}‚ùå Pre-push checks failed. Push aborted.${NC}"
    echo -e "${YELLOW}Fix the issues above and try again.${NC}"
    exit 1
else
    echo -e "${GREEN}‚úÖ All pre-push checks passed!${NC}"
    exit 0
fi
