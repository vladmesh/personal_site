---
import BaseLayout from '@layouts/BaseLayout.astro';
import ProjectCard from '@components/ProjectCard.astro';
import { uiCopy } from '@data/ui';
const entries = await Astro.glob('../../../content/en/projects/*.mdx');
---
<BaseLayout
  title={uiCopy.en.projectsPage.metaTitle}
  description={uiCopy.en.projectsPage.metaDescription}
  lang="en"
  ogImage="/og/projects.png"
>
  <section class="space-y-8">
    <header class="space-y-3">
      <p class="text-sm uppercase tracking-[0.3em] text-brand-light/80">{uiCopy.en.projectsPage.eyebrow}</p>
      <h1 class="text-4xl font-semibold text-white">{uiCopy.en.projectsPage.title}</h1>
      <p class="max-w-2xl text-slate-300">{uiCopy.en.projectsPage.intro}</p>
    </header>
    <div class="grid gap-6 md:grid-cols-2">
      {entries.map((project) => {
        const slug = project.slug ?? project.file?.split('/').pop()?.replace(/\.mdx$/, '');
        return <ProjectCard project={{ ...project.frontmatter, slug }} lang="en" />;
      })}
    </div>
  </section>
</BaseLayout>
