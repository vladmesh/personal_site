---
const { lang = 'en', groups = [], title, subtitle } = Astro.props;
---
<section id="skills" class="space-y-6">
  <div class="flex items-end justify-between">
    <h2 class="text-3xl font-semibold text-white">{title ?? (lang === 'ru' ? 'Навыки' : 'Skills')}</h2>
    <p class="text-sm text-slate-400">{subtitle ?? (lang === 'ru' ? 'Основные стек и инструменты.' : 'Core stack and tooling.')}</p>
  </div>
  <div class="grid gap-4 md:grid-cols-2">
    {groups.map((group) => (
      <div class="rounded-2xl border border-white/10 bg-white/5 p-5" key={group.title.en}>
        <h3 class="text-lg font-medium text-white">{group.title[lang]}</h3>
        <p class="text-sm text-slate-400">{group.description[lang]}</p>
        <ul class="mt-3 flex flex-wrap gap-2 text-sm text-slate-200">
          {group.items.map((item: string) => (
            <li key={item} class="rounded-full border border-white/10 px-3 py-1">{item}</li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</section>
